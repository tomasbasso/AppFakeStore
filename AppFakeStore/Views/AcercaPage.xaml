<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFakeStore.Views.AcercaPage"
             xmlns:models="clr-namespace:AppFakeStore.Models"
             Title="AcercaPage">
    <VerticalStackLayout>
        <Image Source="dotnet_bot.png" />
        <Label 
            Text="Datos del Programador"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Button x:Name="IconBtn" Margin="0, 10" ContentLayout="Top, 5" Text="Contacto" Clicked="IconBtn_Clicked" WidthRequest="120" HeightRequest="70">
            <Button.ImageSource >
                <FontImageSource FontFamily="MaterialDesignIcons" Glyph="&#xe158;" />
            </Button.ImageSource>
        </Button>
        <Button  x:Name="BackBtn" ContentLayout="Top, 5" Text="Volver" Clicked="BackBtn_Clicked" WidthRequest="120" HeightRequest="70">
            <Button.ImageSource >
                <FontImageSource FontFamily="MaterialDesignIcons" Glyph="&#xeba6;"/>
            </Button.ImageSource>
        </Button>

        
    </VerticalStackLayout>
</ContentPage>